<div class= "pages">
  <div class="container">
  <%= bootstrap_flash %>
    <div class="row" align ="center">
      <div class="col-md-12">

        <% if @bookings.count > 0 %>
          <table class="table">
            <h4>Bookings Summary</h4>

            <thead>
              <tr>
                <th>Ref. no</th>
                <th>Airline</th>
                <th>Departure Airport</th>
                <th>Arrival Airport</th>
                <th>Departure Date</th>
              </tr>
            </thead>

            <tbody>
              <% @bookings.each do |booking| %>
                <% if booking.user_id == current_user.id %>
                  <% flight = Flight.find(booking.flight_id) %>
                  <tr>
                  <td><%= booking.booking_ref_code %></td>
                  <td><%= flight.airline_name %></td>
                  <td><%= flight.departure_airport.name %></td>
                  <td><%= flight.arrival_airport.name %></td>
                  <td><%= flight.departure_date.strftime("%d - %m - %Y") %></td>
                  <td><%= link_to content_tag(:span, "", class: "glyphicon glyphicon-search", title: "View"), booking %></td>
                  <td><%= link_to content_tag(:span, "", class: "glyphicon glyphicon-edit", title: "Edit"), edit_booking_path(booking) %></td>
                  <td><%= link_to content_tag(:span, "", class: "glyphicon glyphicon-trash", title: "Delete"), booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% else %>
                  <a href="/flights" class ="btn btn-primary">Book A flight now</a>
                <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>

        <% else %>
          <a href="/flights" class ="btn btn-primary">Book A flight now</a>
        <% end %>

      </div>
    </div>
  </div>
</div>